<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.bht.fpa.mail.s798419.menu.commands.menuFilterCategory"
            name="Menu Filter Category">
      </category>
      <command
            categoryId="de.bht.fpa.mail.s798419.menu.commands.menuFilterCategory"
            id="de.bht.fpa.mail.s798419.menu.commands.menuFilter"
            name="Configure Filter...">
      </command>
      <command
            categoryId="de.bht.fpa.mail.s798419.menu.commands.menuFilterCategory"
            id="de.bht.fpa.mail.s798419.menu.commands.menuClearFilter"
            name="Clear Filter">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.bht.fpa.mail.s798419.menu.handlers.MenuFilterHandler"
            commandId="de.bht.fpa.mail.s798419.menu.commands.menuFilter">
      </handler>
      <handler
            class="de.bht.fpa.mail.s798419.menu.handlers.MenuClearFilterHandler"
            commandId="de.bht.fpa.mail.s798419.menu.commands.menuClearFilter">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="de.bht.fpa.mail.s798419.menu.commands.menuFilter"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+3">
      </key>
      <key
            commandId="de.bht.fpa.mail.s798419.menu.commands.menuClearFilter"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+4">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="de.bht.fpa.mail.s798419.menu.menus.menuFilter"
               label="Filter"
               mnemonic=";">
            <command
                  commandId="de.bht.fpa.mail.s798419.menu.commands.menuFilter"
                  id="de.bht.fpa.mail.s798419.menu.menus.menuFilter"
                  mnemonic="S">
            </command>
            <command
                  commandId="de.bht.fpa.mail.s798419.menu.commands.menuClearFilter"
                  id="de.bht.fpa.mail.s798419.menu.menus.menuClearFilter"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="de.bht.fpa.mail.s798419.menu.toolbars.filterToolbar">
            <command
                  commandId="de.bht.fpa.mail.s798419.menu.commands.menuFilter"
                  id="de.bht.fpa.mail.s798419.menu.toolbars.menuFilter"
                  tooltip="Configure a filter">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
