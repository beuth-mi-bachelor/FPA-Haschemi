<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="de.bht.fpa.mail.s798419.fsnavigation.NavigationView"
            id="de.bht.fpa.mail.s798419.fsnavigation.NavigationView"
            name="name"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="de.bht.fpa.mail.s798419.main.perspective">
         <view
               id="de.bht.fpa.mail.s798419.fsnavigation.NavigationView"
               minimized="false"
               relationship="stack"
               relative="de.bht.fpa.mail.s798419.main.perspective.left">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.bht.fpa.mail.s798419.fsnavigation.handlers.SetBaseDir"
            commandId="de.bht.fpa.mail.s798419.fsnavigation.commands.setBaseDirectory">
      </handler>
      <handler
            class="de.bht.fpa.mail.s798419.fsnavigation.handlers.HistoryViewer"
            commandId="de.bht.fpa.mail.s798419.fsnavigation.commands.historyViewer">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="de.bht.fpa.mail.s798419.fsnavigation.commands.setBaseDirectory"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+1">
      </key>
      <key
            commandId="de.bht.fpa.mail.s798419.fsnavigation.commands.historyViewer"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+2">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               id="de.bht.fpa.mail.s798419.fsnavigation.menus.FSNavigationMenu"
               label="FS Navigation"
               mnemonic="M">
            <command
                  commandId="de.bht.fpa.mail.s798419.fsnavigation.commands.setBaseDirectory"
                  id="de.bht.fpa.mail.s798419.fsnavigation.menus.setBaseDirectory"
                  mnemonic="S">
            </command>
            <command
                  commandId="de.bht.fpa.mail.s798419.fsnavigation.commands.historyViewer"
                  id="de.bht.fpa.mail.s798419.fsnavigation.menus.historyViewer"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="de.bht.fpa.mail.s798419.fsnavigation.toolbars.sampleToolbar">
            <command
                  commandId="de.bht.fpa.mail.s798419.fsnavigation.commands.setBaseDirectory"
                  id="de.bht.fpa.mail.s798419.fsnavigation.toolbars.setBaseDirectory"
                  tooltip="Set Base Directory">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.bht.fpa.mail.s798419.fsnavigation.commands.category"
            name="Action Category">
      </category>
      <command
            categoryId="de.bht.fpa.mail.s798419.fsnavigation.commands.category"
            id="de.bht.fpa.mail.s798419.fsnavigation.commands.setBaseDirectory"
            name="Set Base Directory">
      </command>
      <command
            categoryId="de.bht.fpa.mail.s798419.fsnavigation.commands.category"
            id="de.bht.fpa.mail.s798419.fsnavigation.commands.historyViewer"
            name="HistoryViewer">
      </command>
      <category
            id="de.bht.fpa.mail.s798419.fsnavigation.commands.category"
            name="History Category">
      </category>
   </extension>

</plugin>
